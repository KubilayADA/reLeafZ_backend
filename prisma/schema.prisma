generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Doctor {
  id        Int    @id @default(autoincrement())
  name      String
  specialty String
  email     String 
  phone     String
  address   String
}

model Pharmacy {
  id      Int    @id @default(autoincrement())
  name    String
  location String
  contact String
}

model TreatmentRequest {
  id        String   @id @default(cuid())
  fullName  String
  email     String
  phone     String
  city      String
  symptoms  String
  createdAt DateTime @default(now())
}